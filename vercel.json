{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/node"
      },
      {
        "src": ".next/**/*",
        "use": "@vercel/static"
      }
    ],
    

      "rewrites": [
          { "source": "/api/(.*)", "destination": "/api/$1" },
          { "source": "/(.*)", "destination": "/" }
        ],
      
    "build": {
      "env": {
        "CI": "true"
      }
    }
  }
  